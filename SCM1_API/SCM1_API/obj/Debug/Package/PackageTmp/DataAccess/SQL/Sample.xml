<?xml version="1.0" encoding="utf-8" ?>
<SqlMap xmlns="http://tempuri.org/QueryXmlBuilder"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <select id="test">
    SELECT
      JJSK.JISEKI_SEQ_NO
      ,STUFF(STUFF(JJSK.IO_DT, 5, 0, '/'),8,0,'/') AS 'IO_DT'
      ,JJSK.IO_TIME_START
      ,JJSK.IO_TIME_END
      ,JJSK.ITEM_CD
      ,JJSK.KS_CUST_CD
      ,JJSK.AREA_CD
      ,JJSK.KEITAI_KBN
      ,JJSK.IO_TANK
      ,JJSK.NKGK_KBN
      ,JJSK.KAISU
      ,JJSK.TANK_NO
    FROM
      jJiseki JJSK
    WHERE
      <!--JJSK.JISEKI_SEQ_NO = #JISEKI_SEQ_NO#-->
    <!--AND-->
      JJSK.TANK_NO &lt;&gt; '999'
  </select>
  
  
  <select id="GetList">
    SELECT
       OrderID
      ,CustomerID
      ,EmployeeID
      ,ShipName
      ,ShipPostalCode
      ,ShipCountry
      ,ShipCity
      ,ShipAddress
      ,ShipVia
      ,OrderDate
      ,RequiredDate
      ,ShippedDate
      ,Freight
    FROM
      Orders
    <dynamic prepend="WHERE">
      <if prepend="AND" test="ShipName != ''">
        ShipName like '%' + #ShipName# + '%' escape '\'
      </if>
      <if prepend="AND" test="OrderDateFm != null">
        <![CDATA[ OrderDate >= #OrderDateFm# ]]>
      </if>
      <if prepend="AND" test="OrderDateTo != null">
        <![CDATA[ OrderDate <= #OrderDateTo# ]]>
      </if>
    </dynamic>
  </select>

  <select id="GetData">
    SELECT
       OrderID
      ,CustomerID
      ,EmployeeID
      ,ShipName
      ,ShipPostalCode
      ,ShipCountry
      ,ShipCity
      ,ShipAddress
      ,ShipVia
      ,OrderDate
      ,RequiredDate
      ,ShippedDate
      ,Freight
    FROM
      Orders
    WHERE
      OrderID = #OrderID#
  </select>
  
  <insert id="Insert">
    INSERT INTO Orders
    (
      OrderID,
      CustomerID,
      EmployeeID,
      Freight
    )
    VALUES
    (
      #OrderID#,
      #CustomerID#,
      #EmployeeID#,
      #Freight#
    )
  </insert>

  <update id="Update">
    UPDATE Orders SET
      OrderDate = #OrderDate#,
      Freight = #Freight#
    WHERE
      OrderID = #OrderID#
  </update>

  <delete id="Delete">
    DELETE
      FROM Orders
    WHERE
      OrderID = #OrderID#
  </delete>

  <select id="TestIsEmpty">
    select * from a 
    <isEmpty prepend="where" property="value">
      value = #value#
    </isEmpty>
  </select>

  <select id="TestIsNotEmpty">
    select * from a 
    <isNotEmpty prepend="where" property="value">
      value = #value#
    </isNotEmpty>
  </select>

  <select id="TestIsNull">
    select * from a 
    <isNull prepend="where" property="value">
      value = #value#
    </isNull>
  </select>
  
  <select id="TestIsNotNull">
    select * from a 
    <isNotNull prepend="where" property="value">
      value = #value#
    </isNotNull>
  </select>

  <select id="TestIsEqual">
    select * from a 
    <isEqual prepend="where" property="value" compareValue="abc">
      value = #value#
    </isEqual>
  </select>

  <select id="TestIsNotEqual">
    select * from a 
    <isNotEqual prepend="where" property="value" compareValue="abc">
      value = #value#
    </isNotEqual>
  </select>
  
  <select id="TestIsGraterEqual">
    select * from a 
    <isGreaterEqual prepend="where" property="value" compareValue="10">
      value = #value#
    </isGreaterEqual>
  </select>

  <select id="TestIsGraterThen">
    select * from a 
    <isGreaterThan prepend="where" property="value" compareValue="10">
      value = #value#
    </isGreaterThan>
  </select>

  <select id="TestIsLessEqual">
    select * from a 
    <isLessEqual prepend="where" property="value" compareValue="10">
      value = #value#
    </isLessEqual>
  </select>

  <select id="TestIsLessThen">
    select * from a 
    <isLessThan prepend="where" property="value" compareValue="10">
      value = #value#
    </isLessThan>
  </select>

  <select id="TestInclude">
    <include refid="TestSql1" />
    UNION ALL
    <include refid="TestSql2" />    
  </select>

  <sql id="TestSql1">
    select * from a
  </sql>

  <sql id="TestSql2">
    select * from b
  </sql>

  <select id="TestIterate">
    select * from a
    where 
    <iterate open="(" close=")" conjunction="or" property="value">
      value = #value#
    </iterate>
  </select>

  <select id="TestIf">
    select * from a 
    <dynamic prepend="where">
      <if prepend="and" test="val != null and val.value != null" >
        value = #val.value#
      </if>
      <if prepend="and" test="val.value != null or val.value1 != null" >
        value = #val.value#
      </if>
    </dynamic>
  </select>

  <select id="TestIf2">
    select * from a 
    <dynamic prepend="where">
      <if prepend="and" test="val != null &amp;&amp; val.value == &quot;abc&quot;" >
        value = #val.value#
      </if>
      <if prepend="and" test='value != "xyz"' >
        value = #value#
      </if>
    </dynamic>
  </select>

  <select id="TestDollar">
    select $col$ from $table$    
  </select>

</SqlMap>
